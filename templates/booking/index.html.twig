	<link rel="stylesheet" href="{{ asset('/assets/css/booking.css') }}"/>


{% endblock %}

{% block body %}
	{% include 'header.html.twig' with {'user': user} %}
	<div
		class="container">
		<!-- Title -->
		<div class="d-flex justify-content-between align-items-center py-3">
			<h2 class="h5 mb-0">
				<a href="#" class="text-muted"></a>
				Order #16123222</h2>
		</div>

		<!-- Main content -->
		<div class="row">
			<div
				class="col-lg-8">
				<!-- Details -->
				<div class="card mb-4">
					<div class="card-body">
						<div class="mb-3 d-flex justify-content-between">
							<div>
								<span class="me-3">22-11-2021</span>
								<span class="me-3">#16123222</span>
								<span class="me-3">Cash</span>
								<span class="badge rounded-pill bg-info">Booking Details</span>
							</div>
						</div>
						<table class="table table-borderless">
							<tbody>
								<tr>
									<td>
										<div class="d-flex mb-2">
											<div class="flex-shrink-0">
												<img src="{{ asset('assets/images/EventPageImages/Events/' ~ event.id ~ '/1.jpg') }}" alt="event_image" width="75" height="50" class="img-fluid">
											</div>
											<div class="flex-lg-grow-1 ms-3">
												<h6 class="small mb-0">
													<a href="{{ path('app_event_page', {'event': event.id,'id':user.id})}}" class="text-reset text-warning hover">{{ event.name}}</a>
												</h6>
											</div>
										</div>
									</td>
									<td>1</td>
									<td class="text-end">{{event.price}}
										TND</td>
								</tr>
							</tbody>
							<tfoot>
								<tr>
									<td colspan="2">Subtotal</td>
									<td class="text-end">TND</td>
								</tr>
								<tr>
									<td colspan="2">Additional Costs</td>
									<td class="text-end">20 TND</td>
								</tr>
								<tr class="fw-bold">
									<td colspan="2">TOTAL</td>
									<td class="text-end">TND</td>
								</tr>
							</tfoot>
                            <br> <br>
						</table>
					</div>
				</div>
                
				<!-- Payment -->
				<div class="card mb-4">
					<div class="card-body">
						<div class="row">
							<div class="col-lg-6">
								<h3 class="h6">Payment Method</h3>
								<p>Cash<br>
									Total: TND
									<span class="badge bg-danger rounded-pill">Unpaid</span>
								</p>
							</div>
							<div class="col-lg-6">
								<h3 class="h6">Client Name</h3>
								<address>
									<strong>{{user.name}}</strong><br>
									Guests<br>
								</div>
                                <br> <br>
							</div>
						</div>
					</div>
				</div>
                
				<div
					class="col-lg-4">
					<!-- Customer Notes -->
					<div class="card mb-4">
						<div class="card-body">
							<h3 class="h6">Conditions</h3>
							<p>Please ensure to pay fees in The day of the events in our locals.If you want to cancel the booking KKKcontactKKK us 3 days before the start of the event.</p>
						</div>
					</div>
					<div
						class="card mb-4">
						<!-- Event details -->
						<div class="card-body">
							<h3 class="h6">Event Details</h3>
							<p>
								<strong>Title:</strong>
								<span title="{{event.name}}">{{event.name}}</span>
							</p>
							<p>
								<strong>Country:</strong>
								<span title="{{event.country}}">{{event.country}}</span>
							</p>
							<p>
								<strong>City:</strong>
								<span title="{{event.city}}">{{event.city}}</span>
							</p>
							<p>
								<strong>Place:</strong>
								<span title="{{event.place}}">{{event.place}}</span>
							</p>
							<p>
								<strong>Price:</strong>
								<span title="{{event.price}}">{{event.price}}
									TND</span>
							</p>
							<p>
								<strong>Date:</strong>
								<span title="From {{ event.getDateDebut().format('Y-m-d') }} to {{ event.getDateFin().format('Y-m-d') }}">From
									{{ event.getDateDebut().format('Y-m-d') }}
									to
									{{ event.getDateFin().format('Y-m-d') }}</span>
							</p>
                            <p>
								<strong>Additional items:</strong>
								<span>Tent,Sleeping Bag,Camping Clothes</span>
							</p>
                            <p>
								<strong>Additional items Cost:</strong>
								<span>20 TND</span>
							</p>
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>


