{% extends 'base.html.twig' %}
{% block title %}
	Booking Details
{% endblock %}

{% block javascripts %}

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.min.js"></script>


{% endblock %}


{% block stylesheets %}
