{% extends 'base.html.twig' %}

{% block title %}Glamping
{% endblock %}
{% block stylesheets %}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous"/>
	<link rel="stylesheet" href="/assets/css/home.css"/>

{% endblock %}
{% block javascripts %}
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
{% endblock %}

{% block body %}
	<!-- header -->
	<header class="header">
		<a href="#" class="logo">Glamping</a>
		<nav class="navbar">
			<a href="#" style="--clr: 1" class="active">
				Home
			</a>
			<a href="#" style="--clr: 2">
				About Us
			</a>
			<a href="{{ path('app_event_page') }}" style="--clr: 3">
				Catalogue
			</a>
			{% if (user) %}

				<a href="{{ path('app_authentication_logout') }}" style="--clr: 3">
                         log out
				</a>
                <a href="{{ path('app_profile')}}" style="--clr: 4">

					{{user.name}}
				</a>


			{% else %}

				<a href="{{ path('app_authentication_signup') }}" style="--clr: 4">
					Sign Up
				</a>
				<a class="btn btn-success " href="{{ path('app_authentication') }}">Sign In</a>

			{% endif %}

		</nav>
	</header>
	<!-- description de notre site -->
	<div class="container description">
		<div class="title flex-column ">
			<h1 class="titre">welcome to the first camping site in Tunisia</h1>
			<p class="descri">let's discover our country</p>
		</div>
	</div>
	<!-- caroussel -->
	<!-- carroussel container -->
	<div
		style="height: 30%; width: 70%" class="container">
		<!-- navbar -->
		<nav class="navbare z-1 rounded-5 m-auto">
			<div class="container-fluid">
				<div class="row">
					<div class="col-md-4">
						<div class="inputGroup">
							<input type="text" required="required" autocomplete="off"/>
