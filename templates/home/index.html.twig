								<span class="fas fa-regular fa-location-dot"></span>
								location</label>
						</div>
					</div>
					<div class="col-md-3">
						<div class="inputGroup">
							<input type="date" required="required" autocomplete="off"/>
						</div>
					</div>
					<div class="col-md-3">
						<div class="inputGroup">
							<input type="number" min="1" max="10" required="required" autocomplete="off"/>
							<label for="guests" name="guest">
								<span class="fas fa-regular fa-user"></span>
								Add
																																																																																																							                  guests</label>
						</div>
					</div>
					<div class="col-md-2">
						<div class="inputGroup">
							<button type="button" class="btn btn-success p-3 m-1">
								Search
							</button>
						</div>
					</div>
				</div>
			</div>
		</nav>
		<!-- caroussel -->
		<div class="carousel">
			<div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
				<div class="carousel-inner rounded-5">
					<div class="carousel-item active" data-bs-interval="10000">
						<img src="/assets/images/login.jpg" class="d-block w-100" alt="new events"/>
